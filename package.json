{
  "name": "feature-usage-lambdas",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@10.30.0",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "test": "jest --config jest.config.js",
    "test:integration": "jest --config jest.config.integration.js",
    "test:all": "pnpm test && pnpm test:integration",
    "test:coverage": "jest --config jest.config.coverage.js --coverage",
    "build": "sam build",
    "lint": "eslint 'src/**/*.ts' 'tests/**/*.ts'",
    "lint:fix": "eslint --fix 'src/**/*.ts' 'tests/**/*.ts'",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts' '*.{json,mjs,js}'",
    "format:check": "prettier --check 'src/**/*.ts' 'tests/**/*.ts' '*.{json,mjs,js}'",
    "localstack:up": "docker compose up -d",
    "localstack:down": "docker compose down",
    "localstack:logs": "docker compose logs -f localstack",
    "deploy:local": "./scripts/deploy-local.sh",
    "prepare": "husky"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.600.0",
    "pino": "^10.3.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@aws-sdk/client-sqs": "^3.995.0",
    "@eslint/js": "^10.0.1",
    "@faker-js/faker": "^8.4.1",
    "@tsconfig/node22": "^22.0.5",
    "@types/aws-lambda": "^8.10.140",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "esbuild": "^0.21.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "ts-jest": "^29.1.4",
    "typescript": "^5.4.0",
    "typescript-eslint": "^8.55.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,mjs,js,yaml,yml}": [
      "prettier --write"
    ]
  }
}
